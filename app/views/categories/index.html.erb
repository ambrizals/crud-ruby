<h1>Categories</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th class="col-sm-8">Nama Label</th>
      <th class="col-sm-4">Action</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.label %></td>
        <td>
          <%= link_to 'Show', category, class:'btn btn-primary' %>
          <%= link_to 'Edit', edit_category_path(category), class:'btn btn-info' %>
          <%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path, class:'btn btn-primary' %>
