<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Kategori</th>
      <th>Is delete</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= post.category.label %></td>
        <td><%= post.is_delete %></td>
        <td><%= post.user.nama %></td>
        <td><%= link_to 'Restore', post_restore_path(post.id), method: :post, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Post', new_post_path %>
<%= link_to 'Post List', posts_path %>